<%= form_with(model: post) do |form| %>

  <div>
    <% invalid = post.errors.include?(:title) %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control" %>
    <% if invalid %>
      <% post.errors.full_messages_for(:title).each do |error|%>
      <li style="color: red"><%= error %></li>
      <% end %>
    <% end %>
  </div>

  <div>
    <% invalid = post.errors.include?(:description) %>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control" %>
    <% if invalid %>
      <% post.errors.full_messages_for(:description).each do |error|%>
      <li style="color: red"><%= error %></li>
      <% end %>
    <% end %>
  </div>

  <div>
    <% invalid = post.errors.include?(:keywords) %>
    <%= form.label :keywords, style: "display: block" %>
    <%= form.text_field :keywords, class:"form-control" %>
    <% if invalid %>
      <% post.errors.full_messages_for(:keywords).each do |error|%>
      <li style="color: red"><%= error %></li>
      <% end %>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.file_field :images, multiple:true %>
  </div>
  <br>
  <div>
    <%= form.submit class:"btn btn-primary col-12" %>
  </div>
<% end %>
